<div class="col-9">

    <div class="my-4">
        <div class="row">
            <div class="col-3">
                <input class="form-control" id="search" onkeyup="myFunction()" type="search" placeholder="Search">
            </div>
            <div class="col-9">
                <a href="/admin/add-category" class="btn btn-success float-end">ADD CATEGORY</a>
            </div>
        </div>
    </div>

    {{#if categories}}
    <table class="table table-hover border">
        <thead>
            <tr>
                <th scope="col">Sl.No</th>
                <th scope="col">CATEGORY NAME</th>
                <th scope="col">DISCOUNT %</th>
                <th scope="col">ENTER DISCOUNT RATE</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each categories}}
            <tr>
                <th scope="row">{{this.sl_no}}</th>
                <td>{{this.category_name}}</td>
                <td class="" id="dis{{this._id}}">{{this.discount}} %</td>
                <form onsubmit="changeCategoryDiscount('{{this._id}}','{{this.category_name}}')">
                    <td class="d-flex">
                        <input id="discount{{this._id}}" class="form-control mx-1" style="width:70px" type="number"
                            max='100' min='0' value="" required>
                        <button type="submit" class="btn btn-primary mx-1">Submit</button>
                    </td>
                </form>
                <td>
                    <a href="/admin/edit-category/{{this._id}}" type="button" class="btn btn-primary">Edit</a>
                    {{!-- <a href="" class="btn btn-danger">Delete</a> --}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    {{else}}
    <h1>empty</h1>
    {{/if}}

</div>

</div>


<script>
    function changeCategoryDiscount(categoryId, categoryName) {
        onsubmit = (e) => {
            e.preventDefault()
            console.log(categoryId)
            let percent = document.getElementById('discount' + categoryId).value
            fetch('/admin/change-category-discount', {
                method: 'post',
                headers: {
                    'Content-Type': 'application/json;charset=utf-8'
                },
                body: JSON.stringify({ categoryName, categoryId, percent })
            }).then((res) => {
                return res.json({})
            }).then((data) => {
                document.getElementById('dis' + categoryId).innerHTML = percent
            })
        }
    }

</script>