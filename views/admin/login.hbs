{{!-- admin login --}}

<div class="container mt-5" style="height: 60vh;">
    <div class="row">
        <div class="col-9 col-sm-7 col-md-6 col-lg-4 col-xl-3 mx-auto my-5">
            <form id="login_form" action="" method="">
                <div class="p-5 pt-4 border bg-light">
                    <label class="form-label m-0" for="emailid">Email ID</label>
                    <input class="form-control rounded-0" id="emailid" type="text" name="emailid" required
                        onkeyup="validateInput('emailid')">
                    <span class="error" id="emailid_error"></span>
                    <br>

                    <label class="form-label m-0" for="password">Password</label>
                    <input class="form-control rounded-0" id="password" type="password" name="password" required
                        onkeyup="validateInput('password')">
                    <span class="error" id="password_error"></span><br>

                    <button class="btn btn-outline-primary form-control rounded-0" id="liveToastBtn" type="submit"
                        onclick="return adminLoginValidation()">Login</button>
                    <br>
                    <br>

                    {{!-- <a href="admin/signup" style="text-decoration: none;">Don't have account? Click here to
                        Signup</a> --}}
                </div>
            </form>
        </div>
    </div>
</div>