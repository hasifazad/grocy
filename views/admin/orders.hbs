<div class="col-9">
    <div class="row">
        <div class="col my-5">

            <table id="my_table" class="table table-hover border p-3">
                <thead>
                    <tr>
                        <th scope="col">Sl.No.</th>
                        <th scope="col">Date</th>
                        <th scope="col">Address</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Payment</th>
                        <th scope="col">Status</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <th scope="row">{{this.sl_no}}</th>
                        <td>{{this.ordered_on}}</td>
                        <td>{{this.delivery_details.housename}}</td>
                        <td>{{this.delivery_details.mobile}}</td>
                        <td>{{this.payment}}</td>
                        <td>{{this.status}}</td>
                        <td class="row">
                            <div class="col p-0">
                                <a href="/admin/view-order/{{this._id}}" class="btn btn-primary btn-sm">view details</a>
                            </div>
                            <div class="col p-0">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle btn-sm" type="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        Status
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/admin/ship-order/{{this._id}}">Shipped</a></li>
                                        <li><a class="dropdown-item" href="/admin/deliver-order/{{this._id}}">Deliverd</a></li>
                                        <li><a class="dropdown-item" href="/admin/remove-order/{{this._id}}">Cancel</a></li>
                                    </ul>
                                </div>
                            </div>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>


        </div>
    </div>
</div>



</div>
<script>
    $(document).ready(function () {
        $('#my_table').DataTable();
    });
</script>