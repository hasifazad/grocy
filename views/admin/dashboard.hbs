      <canvas id="myChart"></canvas>
    </div>

  </div>


</div>
</div>
</div>




<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('myChart');

  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange', '', '', '', '', '', '', '', '',],
      datasets: [{
        label: '# of Votes',
        data: [{{ ar }}],
      borderWidth: 1
    }]
  },
    options: {
    scales: {
      y: {
        beginAtZero: true
      }
    }
  }
  });
</script>




