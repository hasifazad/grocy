<div class="col-12 col-md-9" style="border: 1px solid black;">

  <div class="row justify-content-evenly">
    {{!-- <div class="d-flex my-4"> --}}
      <div class="card col-6 col-md-2 p-2">
        <p>Number of Users</p>
        <p style="font-size:calc(100% + 1vw + 1vh)">{{userCount}}</p>
      </div>
      <div class="card col-6 col-md-2 p-2">
        <p>Number of Products</p>
        <h2>{{productCount}}</h2>
      </div>
      <div class="card col-6 col-md-2 p-2">
        <p>Number of Brands</p>
        <h2>{{brandCount}}</h2>
      </div>
      <div class="card col-6 col-md-2 p-2">
        <p>Number of Orders</p>
        <h2>{{orderCount}}</h2>
      </div>
      <div class="card col-6 col-md-2 p-2">
        <p>Total Sales</p>
        <h2>{{totalSale}}</h2>
        {{!--
      </div> --}}
    </div>

    {{!-- <div class="row">
