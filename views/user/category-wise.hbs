<div class="container">
  <div class="row">


    <div class="col-4 col-md-2 mt-md-5">
      <div class="nav flex-column nav-pills position-fixed" id="v-pills-tab" role="tablist" aria-orientation="vertical">

        <a href="/category-wise/All" class="nav-link" id="v-pills-home-tab" data-bs-toggle=""
          data-bs-target="#v-pills-home" type="button" role="tab" aria-controls="v-pills-home" aria-selected="true">All
          Items</a>

        <a href="/category-wise/Vegetables" class="nav-link" id="v-pills-profile-tab" data-bs-toggle=""
          data-bs-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile"
          aria-selected="false">Vegetables</a>

        <a href="/category-wise/Fruits" class="nav-link" id="v-pills-disabled-tab" data-bs-toggle=""
          data-bs-target="#v-pills-disabled" type="button" role="tab" aria-controls="v-pills-disabled"
          aria-selected="false">Fruits</a>

        <a href="/category-wise/Pulses" class="nav-link" id="v-pills-messages-tab" data-bs-toggle=""
          data-bs-target="#v-pills-messages" type="button" role="tab" aria-controls="v-pills-messages"
          aria-selected="false">Pulses</a>

        <a href="/category-wise/Powders" class="nav-link" id="v-pills-settings-tab" data-bs-toggle=""
          data-bs-target="#v-pills-settings" type="button" role="tab" aria-controls="v-pills-settings"
          aria-selected="false">Powders</a>

        <a href="/category-wise/Cookies" class="nav-link" id="v-pills-settings-tab" data-bs-toggle=""
          data-bs-target="#v-pills-settings" type="button" role="tab" aria-controls="v-pills-settings"
          aria-selected="false">Cookies</a>
      </div>
    </div>

    <div class="col-8 col-md-10 my-md-5">
      <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane fade show active d-flex" id="v-pills-home" role="tabpanel"
          aria-labelledby="v-pills-home-tab" tabindex="0">


          <div class="row">
            {{#each products}}
            <div class="card m-2" style="width: 12rem;">
              <a href="/card-details/{{this._id}}">
                <img src="/images/products/{{this.images.[0]}}" class="card-img-top" alt="...">
              </a>
              <div class="card-body">
                <h5 class="card-title">
                  {{ this.name }}
                </h5>
                {{#neq this.offer_price this.price}}
                <del class="card-text">&#8377;&nbsp;{{ this.price }} per Kg</del>
                <p class="card-text">&#8377;&nbsp;{{this.offer_price}} per kg</p>
                {{/neq}}
                {{#eq this.offer_price this.price}}
                <p class="card-text mb-0">&#8377;&nbsp;{{ this.price }} per Kg</p>
                <p class="card-text">No offers</p>
                {{/eq}}


                <div class="row">
                  <div class="col-9 p-0">
                    {{#if this.cart}}
                    <div>
                      <button
                        onclick="changeQuantity('{{this.cart_id}}','{{this._id}}','{{../../userId}}','-1','{{this.offer_price}}')"
                        class="btn btn-success btn-sm">-</button>
                      <span id="{{this._id}}">{{this.quantity}}</span>
                      <button class="btn btn-sm p-0" onclick="change(){}">kg</button>
                      <button
                        onclick="changeQuantity('{{this.cart_id}}','{{this._id}}','{{../../userId}}','1','{{this.offer_price}}')"
                        class="btn btn-success btn-sm">+</button>
                    </div>
                    {{else}}
                    <button onclick="addToCart('{{../this._id}}')" class="btn btn-success btn-sm">Add to
                      Cart</button>
                    {{/if}}
                  </div>

                  <div class="col-3 p-0">
                    {{#if this.wishlist}}
                    <button onclick="addToWishlist('{{this._id}}')" class="btn btn-danger btn-sm border-danger fw-bold">
                      <i class="bi bi-heart"></i>
                    </button>
                    {{else}}
                    <button onclick="addToWishlist('{{this._id}}')"
                      class="btn btn-outline-danger btn-sm float-end border-danger fw-bold">
                      <i class="bi bi-heart"></i>
                    </button>
                    {{/if}}
                  </div>
                </div>


              </div>
            </div>
            {{/each}}
          </div>




        </div>

      </div>
    </div>


  </div>
</div>