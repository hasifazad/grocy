<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-sm-7 col-md-6 col-lg-5 col-xl-4 mx-auto" id="f">
            <form id="loginform" action="" method="">
                <div class="p-5 pt-4 border rounded-0 bg-light">
                    <label class="form-label m-0" for="emailid">Email ID</label>
                    <input class="form-control rounded-0" id="emailid" type="text" name="emailid" required
                        onkeyup="getEmail()">
                    <span class="error" id="e_error"></span>
                    <br>

                    <label class="form-label m-0" for="password">Password</label>
                    <input class="form-control rounded-0" id="password" type="password" name="password" required
                        onkeyup="getPassword()">
                    <span class="error" id="p_error"></span>
                    <br>

                    <button class="btn btn-success form-control rounded-0" type="submit"
                        onclick="return loginValidation()">Login</button>

                    <p class="text-center mb-0">or</p>

                    <a href="/otp-login" class="btn btn-success form-control rounded-0" type="submit">OTP Login</a>
                    <br>
                    <br>

                    <a href="/signup" style="text-decoration: none;">Don't have account? Click here to Signup</a>
                </div>



            </form>
        </div>
    </div>
</div>


